<Window x:Class="PictureList.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PictureList"
        mc:Ignorable="d"
        Title="MainWindow" Height="435" Width="665" Style="{StaticResource MainWindowStyle}" >
  
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition Height="345"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="184"></ColumnDefinition>
        </Grid.ColumnDefinitions>

        <Grid Grid.ColumnSpan="3" Background="Gainsboro" Opacity="100" Name="TitleBar">
            <StackPanel  Orientation="Horizontal" >
                <Label VerticalAlignment="Center" Height="29" FontSize="15">图片浏览器</Label>
            </StackPanel>
            <Button  Style="{StaticResource CloseButtonStyle}" HorizontalAlignment="Right" 
                     FontFamily="Microsoft Ya Hei" FontSize="18" Click="ButtonX_OnClick"/>

        </Grid>

        <Border Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" BorderBrush="Gainsboro" BorderThickness="0,0,0,1" Padding="0,0,0,3">
            <ListBox Name="Listbox" Style="{StaticResource CustomListBox}" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                <!--数据容器选择器-->
                <ListBox.ItemContainerStyleSelector>
                    <local:ListBoxItemContainerTemplateSelector
                        ButtonTemplate="{StaticResource ButtonItem}"
                        ImageTemplate="{StaticResource ImageItem}" />
                </ListBox.ItemContainerStyleSelector>
                <!--数据呈现方式选择器-->
                <ListBox.ItemTemplateSelector>
                    <local:ListBoxItemDataTemplateSelector 
                            ButtonTemplate="{StaticResource ButtonDataTemplate}"
                            ImageTemplate="{StaticResource ImageDataTemplate}"/>
                </ListBox.ItemTemplateSelector>
            </ListBox>
        </Border>
        <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal" >
            <Button  Height="26" Width="80" Margin="0,13,6,10" Command="local:CustomCommands.Delete">
                <Button.Style>
                    <Style TargetType="{x:Type Button}">
                        <Setter Property="Background" Value="White" />
                        <Setter Property="Foreground" Value="Black"/>
                        <Setter Property="FontSize" Value="14"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate>
                                    <Border BorderThickness="1" BorderBrush="Gainsboro" Background="{TemplateBinding Background}">
                                        <ContentPresenter Content="删除" HorizontalAlignment="Center" VerticalAlignment="Center" />
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="Gainsboro"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="DarkGray" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
            <Button Style="{StaticResource ApplyButtonStyle}" Margin="6,13,12,10" Command="local:CustomCommands.Zoom">应用</Button>
        </StackPanel>
        
        

    </Grid>
</Window>
